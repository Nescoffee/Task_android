<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nescoffee.taskk.RegisterActivity">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="email"

        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etEmail2"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"

        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etPassword1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword1"
        app:layout_constraintRight_toRightOf="@+id/etPassword1" />

    <EditText
        android:id="@+id/etRePassword"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Retype Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail2"
        app:layout_constraintRight_toRightOf="@+id/etEmail2" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:text="Registration"
        app:layout_constraintLeft_toLeftOf="@+id/etRePassword"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etRePassword"
        app:layout_constraintRight_toRightOf="@+id/etRePassword" />
</TableLayout>
</android.support.constraint.ConstraintLayout>
