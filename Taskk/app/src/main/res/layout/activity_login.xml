<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nescoffee.taskk.LoginActivity">

<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/etEmail2"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/etPassword1"
        app:layout_constraintRight_toRightOf="@+id/etPassword1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/etPassword1"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail2"
        app:layout_constraintRight_toRightOf="@+id/etEmail2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/etEmail2"
        android:layout_marginTop="3dp" />



    <Button
        android:id="@+id/bReg"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Registr"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        tools:layout_editor_absoluteX="0dp" />
</TableLayout>
</android.support.constraint.ConstraintLayout>
